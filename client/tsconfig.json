{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es6",
    "dom"
  ]
}
