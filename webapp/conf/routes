# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /@/about             core.controllers.HomeController.about

# Feature flips
GET         /api/flips           featureflip.controllers.FeatureFlipController.list
POST        /api/flip            featureflip.controllers.FeatureFlipController.create

# Map static resources from the /public folder to the /assets URL path
GET         /favicon.ico         core.controllers.XAssets.favicon
GET         /assets/*file        core.controllers.XAssets.versioned(path="/public", file: controllers.Assets.Asset)

# Application's entry point
GET         /$any<.*>            core.controllers.HomeController.index(any: String)
